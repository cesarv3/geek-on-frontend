<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %> 
    <script src="/scripts/script_login.js" defer></script>
    <link rel="stylesheet" href="/css/create.css">
</head>
</head>
<body>
    <div class="contenedor-general">
        
        <header>                
            <div class="nav-bar">            
                <a href="/"><img id="logo" src="/images/logoGameUp.png"/></a>          
            </div>                                
        </header>
    
        <div class="contenedor">

                <div class="tab-items">
                    <div class="marco">
                        <p>Iniciar Sesion</p>   
                    </div>
                    <div class="marco">
                        <a href="/usuarios/registro"><p>Crear Cuenta</p></a>
                    </div>
                </div>

                <div class="tab-items">
                    <div id="errores" class="marco">
                                       
                    </div>
                </div>
            

            <form id="loginForm" onsubmit="return doActionLogin();"  method="POST" enctype="multipart/form-data">
                <!--  -->

                <label for="email" class="form-label">Email</label>
				<input  type="text" 
                        id="email" 
                        name="email" 
                        placeholder="Ej: usuario@correo.com" 
                        class="form-input"
                        >
                
                    <div class="text-danger">
                        
                    </div>
             

                <label>Contraseña</label>
                <div class="content-password">
                    <input  type="password" 
                            name="password" 
                            id="password" 
                            placeholder="Contraseña">
                    <input id="check" type="checkbox" onclick="mostrarContrasena()">
                    <span style="font-size: 14px; font-family:'Oswald', sans-serif; padding-left: 5px;">Mostrar</span>
                </div>
                
                    <div class="text-danger">
                       
                    </div>
                

                <label class="form-check-label">
                    <input type="checkbox" class="form-check-input" name="remember_user">
                    <span style="font-size: 15px; padding-left: 5px;">Recordar mi usuario</span>
                </label>
                <div class="btn-container" style="margin-top: 10px">
                    <button class="btn-login" type="submit">INGRESAR</button>
                </div>

            </form>     
        </div>
    </div>

    <footer >
       <%- include('../partials/footer') %> 
    </footer>
    <script>
        function mostrarContrasena(){
            var tipo = document.getElementById("password");
            if(tipo.type == "password"){
                tipo.type = "text";
            }else{
                tipo.type = "password";
            }
        }
      </script>
</body>
</html>